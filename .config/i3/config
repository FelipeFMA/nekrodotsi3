# Tecla Super
set $mod Mod4

# Janelas sem bordas/títulos
new_window pixel 1
new_float normal
hide_edge_borders none

# Tire as # para ter binds das bordas/títulos

#bindsym $mod+u border none
#bindsym $mod+y border pixel 1
#bindsym $mod+n border normal

# Fonte e tecla para mexer janelas
font xft:Source Code Pro Semibold-11
floating_modifier $mod

# Abrir terminal
bindsym $mod+Return exec --no-startup-id alacritty

# Fechar janelas
bindsym $mod+Shift+q kill

# Abrir dmenu
bindsym $mod+d exec --no-startup-id dmenu_run -fn 'Source Code Pro Semibold-11' -nb '#282828' -nf '#FFFFFF' -sb '#808080' -sf '#282828'


# Mudar o foco
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Mover janelas
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Vertical / Horizontal
bindsym $mod+h split h;exec notify-send 'Modo horizontal'
bindsym $mod+v split v;exec notify-send 'Modo vertical'

# Tela cheia
bindsym $mod+f fullscreen toggle

# Tirar janela do tilling
bindsym $mod+Shift+space floating toggle

# desktops e monitores
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8

# Enviar janela para outra tela ou desktop
bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4
bindsym $mod+Ctrl+5 move container to workspace $ws5
bindsym $mod+Ctrl+6 move container to workspace $ws6
bindsym $mod+Ctrl+7 move container to workspace $ws7
bindsym $mod+Ctrl+8 move container to workspace $ws8

# Enviar janela para outro desktop e ir junto
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8

# Alguns binários que abrem em modo floating (solto)
for_window [title="File Transfer*"] floating enable
for_window [class="Nitrogen"] floating enable sticky enable border normal
for_window [class="Pavucontrol"] floating enable

# Reinicia o i3
bindsym $mod+Shift+r restart

# Mudar tamanho das janelas com o teclado
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
}

# Wallpaper e barra polybar
exec_always --no-startup-id nitrogen --restore
exec_always --no-startup-id $HOME/.config/polybar/barra.sh

# Cores
client.focused          #282828 #282828 #838383 #282828 #282828
client.focused_inactive #282828 #282828 #838383 #282828 #282828
client.unfocused        #282828 #282828 #838383 #282828 #282828
client.urgent           #282828 #282828 #838383 #282828 #282828
client.placeholder      #282828 #282828 #838383 #282828 #282828
client.background       #282828

# Espaços
gaps inner 10
gaps outer -4
#smart_gaps on

# Coloca o workspace 1 no monitor primário
workspace 1 output primary 

# Monitores
exec_always --no-startup-id /home/felipe/.config/i3/display.sh

# Desliga mouse accel
exec_always --no-startup-id for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Accel Profile Enabled' 0, 1; done

# Inicia polkit
exec --no-startup-id lxpolkit

# Captura de tela
exec --no-startup-id flameshot
bindsym Print exec --no-startup-id flameshot gui
